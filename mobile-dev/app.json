{
  "expo": {
    "name": "Vetly AI",
    "slug": "vetly-ai",
    "version": "1.0.0",
    "description": "AI-powered veterinary assistant for pet health and activity tracking",
    "orientation": "portrait",
    "icon": "./assets/vetly-logo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/vetly-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFC107"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "fetch",
          "remote-notification",
          "background-processing",
          "fetch",
          "remote-notification",
          "background-processing"
        ],
        "NSUserNotificationsUsageDescription": "Vetly AI needs notifications to remind you about your pet's activities and health checks.",
        "NSCameraUsageDescription": "Vetly AI needs camera access to take photos of your pets.",
        "NSPhotoLibraryUsageDescription": "Vetly AI needs photo library access to select pet photos."
      },
      "bundleIdentifier": "com.tabchny.vetlyai"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/vetly-logo.png",
        "backgroundColor": "#FFC107"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "WAKE_LOCK",
        "SCHEDULE_EXACT_ALARM",
        "USE_EXACT_ALARM",
        "POST_NOTIFICATIONS",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.WAKE_LOCK"
      ],
      "package": "com.tabchny.vetlyai"
    },
    "web": {
      "favicon": "./assets/vetly-logo.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/vetly-logo.png",
          "color": "#FFC107"
        }
      ],
      [
        "expo-background-fetch",
        {
          "minimumInterval": 3600
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "1b467ab6-4e62-4001-b4e1-4e73b25e0cdc"
      }
    }
  }
}
