{
  "expo": {
    "name": "Vetly AI",
    "slug": "vetly-ai",
    "version": "1.0.0",
    "description": "AI-powered veterinary assistant for pet health and activity tracking",
    "orientation": "portrait",
    "icon": "./assets/vetly-logo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/vetly-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFC107"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/vetly-logo.png",
        "backgroundColor": "#FFC107"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "WAKE_LOCK"
      ]
    },
    "web": {
      "favicon": "./assets/vetly-logo.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/vetly-logo.png",
          "color": "#FFC107",
          "sounds": ["./assets/notification.wav"]
        }
      ]
    ]
  }
}
